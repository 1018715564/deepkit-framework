{
  "name": "root",
  "repository": "https://github.com/deepkit/deepkit-framework",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "AGPL-3.0-only",
  "scripts": {
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js --no-cache --coverage --forceExit",
    "bootstrap": "lerna bootstrap --no-ci",
    "tsc": "tsc --build",
    "tsc-watch": "tsc --build --watch",
    "clean": "rm -rf packages/*/dist",
    "clean-modules": "rm -rf packages/*/node_modules; rm -rf node_modules;",
    "docs": "rm -rf docs && typedoc",
    "publish": "npm run tsc && lerna publish --no-private",
    "publish-force": "npm run tsc && lerna publish --no-private --force-publish",
    "publish-website": "heroku container:push web && heroku container:release web"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@jest/globals": "^27.0.0-next.1",
    "@types/node": "^14.14.12",
    "coveralls": "^3.0.3",
    "jest": "^27.0.0-next.2",
    "lerna": "^3.22.1",
    "ts-jest": "https://github.com/marcj/ts-jest.git",
    "ts-node": "^9.1.1",
    "typedoc": "^0.16.8",
    "typedoc-plugin-lerna-packages": "^0.3.0",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">= 8.9.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "packages/*/dist"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "projects": [
      "packages/core",
      "packages/core-rxjs",
      "packages/type",
      "packages/orm",
      "packages/orm-integration",
      "packages/bson",
      "packages/mongo",
      "packages/sql",
      "packages/framework-integration",
      "packages/framework",
      "packages/rpc",
      "packages/broker",
      "packages/topsort"
    ]
  }
}
