{
  "name": "root",
  "repository": "https://github.com/super-hornet/super-hornet",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "MIT",
  "scripts": {
    "test": "jest --coverage",
    "bootstrap": "lerna bootstrap --hoist --no-ci",
    "tsc": "lerna run tsc",
    "tsc-watch": "lerna run --parallel tsc-watch",
    "docs": "rm -rf docs && typedoc",
    "docker-image": "docker build -t marshal/website .",
    "publish": "lerna run tsc && lerna publish",
    "publish-website": "heroku container:push web && heroku container:release web"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/node": "^12.12.6",
    "coveralls": "^3.0.3",
    "jest": "^26.1.0",
    "jest-extended": "^0.11.5",
    "lerna": "^3.22.1",
    "reflect-metadata": "^0.1.12",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "~3.9.5",
    "typedoc": "^0.16.8",
    "typedoc-plugin-lerna-packages": "^0.3.0"
  },
  "engines": {
    "node": ">= 8.9.0"
  },
  "jest": {
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/node_modules/**",
      "!**/dist/**/*",
      "!**/tests/**/*",
      "!packages/marshal-benchmark/**/*",
      "!index.ts"
    ],
    "testPathIgnorePatterns": [
        "packages/marshal-benchmark"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ]
  }
}
