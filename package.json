{
  "name": "root",
  "repository": "https://github.com/deepkit/deepkit-framework",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "MIT",
  "scripts": {
    "test": "jest --coverage --forceExit",
    "bootstrap": "lerna bootstrap --nohoist \\* --no-ci",
    "tsc": "tsc --build",
    "tsc-watch": "tsc --build --watch",
    "clean": "rm -rf packages/*/dist",
    "docs": "rm -rf docs && typedoc",
    "publish": "lerna run tsc && lerna publish",
    "publish-website": "heroku container:push web && heroku container:release web"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/node": "^12.12.6",
    "coveralls": "^3.0.3",
    "jest": "^26.1.0",
    "jest-extended": "^0.11.5",
    "lerna": "^3.22.1",
    "ts-jest": "^26.1.1",
    "typescript": "^4.0.2",
    "typedoc": "^0.16.8",
    "typedoc-plugin-lerna-packages": "^0.3.0"
  },
  "engines": {
    "node": ">= 8.9.0"
  },
  "jest": {
    "testPathIgnorePatterns": ["packages/*/dist"],
    "projects": [
      "packages/type",
      "packages/orm",
      "packages/orm-integration",
      "packages/mongo",
      "packages/sql",
      "packages/framework-integration",
      "packages/framework",
      "packages/framework-shared",
      "packages/topsort"
    ]
  }
}
