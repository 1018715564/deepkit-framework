{
  "name": "root",
  "repository": "https://github.com/deepkit/deepkit-framework",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "AGPL-3.0-only",
  "private": true,
  "scripts": {
    "test": "node --max_old_space_size=2048 node_modules/jest/bin/jest.js --coverage --forceExit",
    "bootstrap": "lerna bootstrap --no-ci",
    "build": "tsc --build tsconfig.json && tsc --build tsconfig.esm.json && lerna run build",
    "tsc": "tsc --build",
    "tsc-watch": "tsc --build --watch",
    "clean": "rm -rf packages/*/dist",
    "clean-modules": "rm -rf packages/*/node_modules; rm -rf node_modules;",
    "docs": "rm -rf docs && typedoc",
    "publish-force": "npm run build && lerna publish --no-private --force-publish",
    "publish-website": "heroku container:push web && heroku container:release web"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@deepkit/core": "^1.0.1-alpha.13",
    "@jest/globals": "^27.0.0-next.1",
    "@types/node": "^14.0.0",
    "codecov": "^3.8.1",
    "coveralls": "^3.0.3",
    "jest": "^27.0.0-next.2",
    "lerna": "^3.22.1",
    "madge": "^4.0.0",
    "ts-jest": "^27.0.0-next.3",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typedoc": "^0.19.2",
    "typedoc-plugin-lerna-packages": "^0.3.1",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">= 14.0.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "packages/*/dist"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "projects": [
      "packages/core",
      "packages/core-rxjs",
      "packages/type",
      "packages/orm",
      "packages/bson",
      "packages/mongo",
      "packages/sql",
      "packages/mysql",
      "packages/postgres",
      "packages/sqlite",
      "packages/framework-integration",
      "packages/framework",
      "packages/rpc",
      "packages/broker",
      "packages/topsort"
    ]
  },
  "dependencies": {
    "cloc": "^2.7.0"
  }
}
