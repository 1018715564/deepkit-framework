{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2018",
    "module": "CommonJS",
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": ".",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "jsxImportSource": "@deepkit/framework"
  },
  "include": [
    "./src/**/*.ts"
  ]
}
