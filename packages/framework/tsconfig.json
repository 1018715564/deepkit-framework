{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2018",
    "module": "esnext",
    "esModuleInterop": true,

    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": true,
    "composite": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "types": [
      "formidable",
      "abstract-syntax-tree",
      "ts-node/esm"
    ],

    "jsx": "react-jsx",
    "jsxImportSource": ".."
  },
  "include": [
    "src",
    "jsx",
    "tests",
    "benchmark",
    "index.ts",
    "jsx-runtime.ts",
    "loader.ts",
  ],
  "references": [
    {
      "path": "../rpc/tsconfig.json"
    },
    {
      "path": "../framework-debug-shared/tsconfig.json"
    },
    {
      "path": "../orm/tsconfig.json"
    },
    {
      "path": "../sql/tsconfig.json"
    },
    {
      "path": "../core/tsconfig.json"
    },
    {
      "path": "../core-rxjs/tsconfig.json"
    },
    {
      "path": "../type/tsconfig.dist.json"
    },
    {
      "path": "../mongo/tsconfig.json"
    }
  ]
}
