{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2018",
    "module": "CommonJS",

    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": true,
    "composite": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "types": [
      "formidable"
    ],

    "jsx": "react-jsx",
    "jsxImportSource": "@deepkit/framework",
    "paths": {
      "@deepkit/framework/*": ["./*"]
    }
  },
  "include": [
    "src",
    "jsx",
    "tests",
    "benchmark",
    "index.ts",
    "jsx-runtime",
    "jsx-runtime.ts"
  ],
  "references": [
    {
      "path": "../framework-client/tsconfig.json"
    },
    {
      "path": "../framework-shared/tsconfig.json"
    },
    {
      "path": "../orm/tsconfig.json"
    },
    {
      "path": "../sql/tsconfig.json"
    },
    {
      "path": "../core/tsconfig.json"
    },
    {
      "path": "../core-rxjs/tsconfig.json"
    },
    {
      "path": "../type/tsconfig.dist.json"
    },
    {
      "path": "../mongo/tsconfig.json"
    }
  ]
}
