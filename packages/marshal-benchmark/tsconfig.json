{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2017",
    "module": "CommonJS",

    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": false
  },
  "include": [
    "tests"
  ],
  "references": [
    {
      "path": "node_modules/@super-hornet/core/tsconfig.json"
    },
    {
      "path": "node_modules/@super-hornet/marshal/tsconfig.dist.json"
    }
  ]
}
