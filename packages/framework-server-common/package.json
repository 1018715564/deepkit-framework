{
  "name": "@super-hornet/framework-server-common",
  "version": "0.0.33",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --coverage",
    "tsc": "rm -rf dist && ../../node_modules/.bin/tsc",
    "tsc-watch": "rm -rf dist && tsc --watch"
  },
  "peerDependencies": {
  },
  "dependencies": {
    "@super-hornet/framework-shared": "^0.0.33",
    "@super-hornet/core": "^0.1.17",
    "@super-hornet/marshal": "^2.1.13"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@deepkit)"
    ],
    "testMatch": [
      "**/tests/**/*.+(ts|tsx|js)"
    ],
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  },
  "globals": {
    "ts-jest": {
      "tsConfigFile": "tsconfig.json"
    }
  }
}
