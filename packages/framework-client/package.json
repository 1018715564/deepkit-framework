{
  "name": "@super-hornet/framework-client",
  "version": "0.0.33",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --coverage",
    "tsc": "rm -rf dist && ../../node_modules/.bin/tsc",
    "tsc-watch": "rm -rf dist && tsc --watch"
  },
  "peerDependencies": {
  },
  "dependencies": {
    "@super-hornet/framework-shared": "^0.0.33",
    "@super-hornet/marshal": "^2.1.1",
    "@super-hornet/core": "^0.1.17",
    "@super-hornet/core-rxjs": "^0.1.17",
    "rxjs": "~6.5.3",
    "dot-prop": "^4.2.0",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "@super-hornet/framework-shared": "^0.0.33",
    "@super-hornet/marshal": "^2.1.1",
    "@types/dot-prop": "^4.2.0",
    "@types/ws": "^6.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@super-hornet/*)"
    ],
    "testMatch": [
      "**/tests/**/*.+(ts|tsx|js)"
    ],
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.run.json"
    }
  }
}
