{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2017",
    "module": "CommonJS",

    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": true,
    "composite": true
  },
  "include": [
    "tests",
    "node_modules/@super-hornet/framework-shared/**/*.ts"
  ],
  "references": [
    {
      "path": "node_modules/@super-hornet/framework-shared/tsconfig.json"
    },
    {
      "path": "node_modules/@super-hornet/framework-client/tsconfig.json"
    },
    {
      "path": "node_modules/@super-hornet/framework-server/tsconfig.json"
    },
    {
      "path": "node_modules/@super-hornet/framework-server-common/tsconfig.json"
    },
    {
      "path": "node_modules/@super-hornet/exchange/tsconfig.json"
    },
    {
      "path": "node_modules/@super-hornet/marshal/tsconfig.dist.json"
    }
  ]
}
