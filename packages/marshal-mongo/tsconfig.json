{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "CommonJS",

    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": true,
    "composite": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "types": [
      "mongo-uuid"
    ]
  },
  "include": [
    "benchmarks",
    "src",
    "tests",
    "index.ts"
  ],
  "references": [
    {
      "path": "../core/tsconfig.json"
    },
    {
      "path": "../marshal-bson/tsconfig.json"
    },
    {
      "path": "../marshal/tsconfig.dist.json"
    },
    {
      "path": "../marshal-orm/tsconfig.json"
    }
  ]
}
