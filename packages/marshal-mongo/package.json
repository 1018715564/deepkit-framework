{
  "name": "@super-hornet/marshal-mongo",
  "version": "2.1.13",
  "description": "Marshal MongoDB adapter.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "test": "jest --coverage",
    "tsc": "tsc",
    "tsc-watch": "rm -rf dist && tsc --watch"
  },
  "repository": "https://github.com/super-hornet/super-hornet",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "MIT",
  "peerDependencies": {
    "mongodb": "^3.3.2",
    "rxjs": "~6.5.3"
  },
  "dependencies": {
    "@super-hornet/core": "^0.1.19",
    "@super-hornet/marshal": "^2.1.13",
    "buffer": "^5.2.1",
    "mongo-uuid": "^1.0.0"
  },
  "devDependencies": {
    "@types/mongodb": "^3.5.25",
    "moment": "^2.0.0",
    "mongodb": "^3.3.2",
    "rxjs": "~6.5.3"
  },
  "jest": {
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.{ts}",
      "!**/node_modules/**",
      "!**/lib/**/*",
      "!**/*.d.ts",
      "!index.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
