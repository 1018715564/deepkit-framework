/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./out-tsc/server",
    "target": "es2016",
    "declaration": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src",
    "server.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "entryModule": "./src/app/app.server.module#AppServerModule"
  },
  "references": [
    {
      "path": "./node_modules/@super-hornet/framework-server/tsconfig.json"
    },
    {
      "path": "./node_modules/@super-hornet/framework-server-common/tsconfig.json"
    }
  ]
}
