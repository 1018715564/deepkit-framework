{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "CommonJS",

    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": true,
    "composite": true
  },
  "include": [
    "benchmarks",
    "src",
    "tests",
    "index.ts"
  ],
  "references": [
    {
      "path": "../marshal/tsconfig.dist.json"
    },
    {
      "path": "../marshal-orm/tsconfig.json"
    },
    {
      "path": "../marshal-sql/tsconfig.json"
    },
    {
      "path": "../marshal-mongo/tsconfig.json"
    }
  ]
}
