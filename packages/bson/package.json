{
  "name": "@deepkit/bson",
  "version": "1.0.1-alpha.12",
  "description": "Deepkit BSON parser",
  "type": "module",
  "main": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "echo '{\"type\": \"commonjs\"}' > ./dist/cjs/package.json"
  },
  "repository": "https://github.com/deepkit/deepkit-framework",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "MIT",
  "dependencies": {
    "@deepkit/crypto": "^1.0.1-alpha.12",
    "@deepkit/core": "^1.0.1-alpha.12",
    "@deepkit/type": "^1.0.1-alpha.12"
  },
  "devDependencies": {
    "@types/bson": "^4.0.3",
    "bson-ext": "^2.0.5",
    "bson": "^4.0.4",
    "reflect-metadata": "^0.1.13"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ],
    "testMatch": [
      "**/tests/**/*.spec.ts"
    ]
  }
}
